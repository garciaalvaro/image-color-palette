/*
 * Color Menu
 */

$e_deceleration = cubic-bezier(0.0, 0.0, 0.2, 1)

.icp-color_button

	&.popover_just_closed:before
		transition border-color .3s $e_deceleration

	&:before
		content ""
		position absolute
		top 0
		bottom -1px
		left -1px
		right -1px
		z-index 1
		border 1px solid transparent

	&.text_color-dark
		&:hover:before
			border-color rgba(0,0,0,0.4)
		&.is-menu_open:before
			border-color rgba(0,0,0,0.8)

	&.text_color-light
		&:hover:before
			border-color rgba(255,255,255,0.4)
		&.is-menu_open:before
			border-color rgba(255,255,255,0.75)

#icp-color_menu-container

	.components-clipboard-button
		text-align left
		width 100%

	&:before
	&:after
		content normal

	button
		color inherit
		fill currentColor

	&.text_color-dark
		button:hover
		button:focus
			background-color rgba(255,255,255,.1)

		button
			color rgba(0,0,0,0.95)
			text-shadow 1px 1px 1px rgba(255,255,255,0.3)

			&:focus
				box-shadow inset 0 0 0 1px rgba(0,0,0,.2), inset 0 0 0 1px rgba(0,0,0,.1)

		.icp-color_menu
			border 1px solid rgba(0,0,0,0.15)

			&:before
				border-top-color rgba(0,0,0,0.15)

	&.text_color-light
		button:hover
		button:focus
			background-color rgba(0,0,0,.1)

		button
			color rgba(255,255,255,0.87)
			text-shadow 1px 1px 1px rgba(0,0,0,0.3)

			&:focus
				box-shadow inset 0 0 0 1px rgba(255,255,255,.2), inset 0 0 0 1px rgba(255,255,255,.1)

		.icp-color_menu
			border 1px solid rgba(255,255,255,0.25)

			&:before
				border-top-color rgba(255,255,255,0.15)

	.components-popover__content
		border none
		overflow-y visible

	svg
		width 18px
		height 18px
		margin-right 10px

	.svg_container
		margin-right 10px
		display flex
		justify-content center
		align-items center
		width 30px
		height 30px
		border-radius 50%

	button
		padding 12px 8px
		border-radius 0

.icp-color_menu
	background-color var(--main_color)

	.is-left &:after
	.is-left &:before
		right 18px
		left auto

	&:before
		border 8px solid
		bottom -7px
	&:after
		border 8px solid var(--main_color)
		bottom -6px
	&:before
	&:after
		content ""
		border-bottom none
		border-left-color transparent
		border-right-color transparent
		border-top-style solid
		content ""
		position absolute
		left calc(50% - 10px)
