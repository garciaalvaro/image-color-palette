/*
 * Media Container
 */

$e_standard = cubic-bezier(0.4, 0.0, 0.2, 1)
$e_deceleration = cubic-bezier(0.0, 0.0, 0.2, 1)

#icp-media-container
	display flex
	justify-content center
	cursor pointer
	position relative

#icp-image-container
	width 100%
	height 186px
	padding 15px

#icp-image
	object-fit contain
	width 100%
	height 100%
	display block

#icp-image-edit
	position absolute
	top 8px
	right 8px
	padding 7px
	border-radius 50%
	border none
	box-shadow none

	&:before
		content ""
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		background-color rgba(255,255,255,0.95)
		box-shadow 0 1px 1px 1px rgba(0,0,0,0.1)
		border-radius 50%
		opacity .9
		transition transform .4s $e_deceleration, opacity .4s $e_deceleration

	.material-icon-edit
		width 20px
		height 20px
		transform scale(.85)

	&:hover
		&:before
			transform scale(1.05)
			opacity 1
