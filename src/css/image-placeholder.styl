/*
 * Image Placeholder
 */

$e_standard = cubic-bezier(0.4, 0.0, 0.2, 1)

#icp-placeholder-description
	color rgba(0,0,0,0.75)
	text-align center

#icp-placeholder
	display flex
	flex-direction column
	align-items center
	justify-content center
	width 100%
	background-color var(--color_primary)
	padding 30px
	margin 5px
	height 270px

	&:hover #icp-placeholder-icon
		background-color rgba(255,255,255,0.9)

	#icp-placeholder-icon:hover
		background-color rgba(255,255,255,1)
		transform scale(1.02)
		box-shadow 0 4px 2px rgba(0,0,0,0.07)

#icp-placeholder-icon
	transition transform .3s $e_standard, box-shadow .3s $e_standard, background-color .3s $e_standard
	background-color rgba(255,255,255,0.3)
	padding 20px
	border-radius 50%
	margin-bottom 20px
	box-shadow 0 2px 2px rgba(0,0,0,0.07)
	color rgba(0,0,0,0.7)
	width 60px
	height 60px
	display flex
	align-items center
	justify-content center
