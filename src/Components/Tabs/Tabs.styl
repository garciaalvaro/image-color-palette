/*
 * Tabs
 */

+prefix-classes('icp-')

	#icp-tabs
		display flex
		height 50px
		position sticky
		top 0
		z-index 10
		background-color var(--background_color)

	#icp-container

		.button-tab
			color inherit
			padding 5px
			height 100%
			width 50%
			background transparent
			display flex
			align-items center
			justify-content center
			cursor pointer
			transition background-color .15s $e_deceleration
			border-bottom 1px solid var(--color_01)

			&:hover
				background-color var(--color_005)
				margin-bottom 1px

			&.is-active
				margin-bottom -1px
				font-weight 600
				padding-bottom 3px
				border-bottom 3px solid var(--color_09)
				font-weight 600
