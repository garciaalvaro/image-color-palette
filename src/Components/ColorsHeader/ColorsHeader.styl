/*
 * ColorsHeader
 */

#icp-colors_header
	border-top 1px solid var(--color_005)
	height 2em
	display flex
	align-items center

	.icp-control-select
	h5
		flex 1

	select
	h5
		margin 0
		font-size .97em
		font-weight 500
		color var(--color_06)
		padding 0
		line-height 2em
		white-space nowrap
		text-overflow ellipsis
		overflow hidden

	h5 span
		padding-left .5em

	.components-base-control__field
		margin 0

	select
		outline none
		border none
		box-shadow none
		border-radius 0
		padding-left .5em
		max-height 2em
		/* https://material.io/tools/icons/?icon=unfold_more */
		background-image url("data:image/svg+xml;base64,")
		appearance none
		background-color transparent
		background-repeat no-repeat
		background-size 18px
		background-position-x right
		background-position-y center
