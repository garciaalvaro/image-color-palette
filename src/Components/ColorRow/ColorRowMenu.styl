/*
 * ColorRowMenu
 */

+prefix-classes('icp-')

	button.button-menu
		line-height 1.7em
		min-height 40px

		.menu &
			width 100%
			padding 0 14px 0 7px
			display flex
			align-items center
			transition background-color .2s $e_standard

			&:hover
				background-color var(--color_005)

	.menu-icon
		display flex
		margin-right 5px
		width 24px
		justify-content center

	.menu-container
		background-color var(--background_color)
		border 1px solid var(--color_08)
		padding 5px 0
		max-width 300px

		&:before
			z-index 1
			content ""
			position absolute
			top 1px
			left 1px
			border-left 0px solid transparent
			border-right 25px solid transparent
			border-bottom 0 solid transparent
			border-top 25px solid
