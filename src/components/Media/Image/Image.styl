/*
 * Image
 */

.container
	width 100%
	height 186px
	padding 15px
	position relative

.image.image
	object-fit contain
	width 100%
	height 100%
	display block
	max-width 100%
	max-height 100%

.button
	position absolute
	top 8px
	right 8px
	padding 7px
	border-radius 50%
	border none
	box-shadow none
	line-height 0

	svg
		position relative
		fill rgba(0,0,0,.8)

	&:before
		content ""
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		background-color rgba(255,255,255,.9)
		box-shadow 0 1px 1px 1px rgba(0,0,0,.1)
		border-radius 50%
		opacity .9
		transition transform .4s var(--ease_deceleration), opacity .4s var(--ease_deceleration)

	&:hover
		&:before
			transform scale(1.05)
			opacity 1
