/**
 * App - Logo
 */

:global(#editor .components-icon-button:hover) .container

	.row-1
	.row-2
		fill #ffa076!important// Necessary

	.row-3
	.row-4
		fill #b8c9d0!important// Necessary

	.row-5
	.row-6
		fill #7d7876!important// Necessary

:global(#editor .components-icon-button.is-toggled:hover) .container rect
	fill #fff!important// Necessary

.container

	:global(#editor) &

		&:hover
			.row-1
			.row-3
			.row-5
				fill-opacity 1
			.row-2
			.row-4
			.row-6
				fill-opacity .3

		.row-1
		.row-2
			fill #ffa076
		.row-3
		.row-4
			fill #b8c9d0
		.row-5
		.row-6
			fill #7d7876

	.column-1

		&.row-2
		&.row-4
		&.row-6
			fill-opacity .7

	.column-2

		&.row-2
		&.row-4
		&.row-6
			fill-opacity .4

		&.row-1
		&.row-3
		&.row-5
			fill-opacity .7

	.column-3

		&.row-2
		&.row-4
		&.row-6
			fill-opacity .1

		&.row-1
		&.row-3
		&.row-5
			fill-opacity .4

	rect
		transition fill-opacity .2s cubic-bezier(0.4, 0.0, 0.2, 1)
